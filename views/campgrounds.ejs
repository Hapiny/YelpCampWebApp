<% include partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand-picked campgrounds.</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new CampGround.</a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="display:flex; flex-wrap:wrap;">
            <% campgrounds.forEach(function(camp) { %>
            <div class="col-sm-6 col-md-3">
                    <img class="img-thumbnail" src=<%= camp.image %> alt="">
                    <div class="caption text-center">
                        <h4> <%= camp.name %></h4>
                    </div>
                    <p>
                        <a href="show" class="btn btn-primary">More Info</a>
                    </p>
            </div>
            <% }); %>
    </div>
</div>
<% include partials/footer %>
<% include ../partials/header%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= camp.name %> Campgorund</h1>

        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= camp._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.name %>" name="upd[name]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.image %>" name="upd[image]">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= camp.description %>" name="upd[description]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-default btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %>">Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer%>